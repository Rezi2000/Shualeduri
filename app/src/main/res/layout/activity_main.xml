<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/pay"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_400"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPay" />

    <EditText
        android:id="@+id/etCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="XXXX"
        android:inputType="number"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/etCard2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoney" />

    <EditText
        android:id="@+id/etCard2"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="XXXX"
        android:inputType="number"

        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/etCard3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etCard1"
        app:layout_constraintTop_toBottomOf="@+id/tvMoney" />

    <EditText
        android:id="@+id/etCard3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:hint="XXXX"
        android:inputType="number"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/etCard4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etCard2"
        app:layout_constraintTop_toBottomOf="@id/tvMoney"
        tools:layout_editor_absoluteY="309dp" />

    <EditText
        android:id="@+id/etCard4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        android:hint="XXXX"
        android:inputType="number"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etCard3"
        app:layout_constraintTop_toBottomOf="@id/tvMoney" />

    <EditText
        android:id="@+id/etDateMonth"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:hint="MM"
        android:inputType="date"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/etCard1"
        app:layout_constraintStart_toStartOf="@+id/etCard1"
        app:layout_constraintTop_toBottomOf="@+id/etCard1" />

    <EditText
        android:id="@+id/etDateYear"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:hint="YY"
        android:inputType="date"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/etCard2"
        app:layout_constraintStart_toEndOf="@+id/etCard1"
        app:layout_constraintTop_toBottomOf="@+id/etCard2" />

    <EditText
        android:id="@+id/etCvv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:padding="4dp"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/etCard4"
        app:layout_constraintStart_toEndOf="@+id/etCard3"
        app:layout_constraintTop_toBottomOf="@+id/etCard4" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="@string/pay"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDateYear" />

</androidx.constraintlayout.widget.ConstraintLayout>